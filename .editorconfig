# EditorConfig (http://editorconfig.org)

# Set this as the root EditorConfig file
root = false

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# Text and Markdown
[*.{md,markdown,mdown,mkd,mkdown,ron,txt,text}]
indent_style = space
indent_size = 4

# HTML, CSS, and JavaScript
[*.{html,css,scss,sass,less,js}]
indent_style = space
indent_size = 2

# JSON and YAML
[*.{json,yml}]
indent_style = space
indent_size = 2
